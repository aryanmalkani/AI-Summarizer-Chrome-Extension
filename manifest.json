{
  "manifest_version": 3,
  "name": "AI Summarizer",
  "version": "1.0",
  "description": "Right-click to summarize selected text using Groq or OpenRouter backend",
  "permissions": ["contextMenus", "scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    }
  },
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  }
}